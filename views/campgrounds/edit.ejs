<%- include('../../partials/header.ejs') %>

<div class="row d-flex flex-column align-items-center">
  <h1 class="text-success">Edit <%=campground.title%> :</h1>
  <form
    class="form-group col-9 col-lg-4 validated-form"
    action="/campgrounds/<%=campground._id%>?_method=PATCH"
    method="POST"
    novalidate
  >
    <div>
      <label class="form-label" for="title">Title:</label>
      <input
        class="form-control mb-2"
        type="text"
        id="title"
        name="campground[title]"
        placeholder="title"
        required
        value="<%=campground.title%>"
      />
      <div class="valid-feedback">Looks Good!</div>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        UnValid Title!!
      </div>
    </div>

    <div>
      <label class="form-label" for="price">Price:</label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input
          class="form-control"
          type="text"
          name="campground[price]"
          id="price"
          required
          placeholder="price"
          value="<%=campground.price%>"
          aria-label="price"
          aria-describedby="price-label"
        />
      </div>
    </div>

    <div>
      <label class="form-label" for="image">Image:</label>
      <input
        class="form-control mb-2"
        type="text"
        id="image"
        name="campground[image]"
        placeholder="image"
        required
        value="<%=campground.image%>"
      />
    </div>
    <div>
      <label class="form-label" for="location">Location:</label>
      <input
        class="form-control mb-2"
        type="text"
        id="location"
        name="campground[location]"
        placeholder="title"
        required
        value="<%=campground.location%>"
      />
    </div>

    <div>
      <label class="form-label" for="description">Description:</label>
      <textarea
        class="form-control mb-2"
        type="text"
        id="description"
        name="campground[description]"
        required
        placeholder="description"
      >
<%=campground.description%></textarea
      >
    </div>
    <hr />
    <button class="btn btn-success" type="ReSubmit">Update</button>
  </form>
</div>
<%- include('../../partials/footer.ejs') %>
