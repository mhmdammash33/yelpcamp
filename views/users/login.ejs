<%- include('../../partials/header.ejs') %>

<form action="/login" method="POST" class="validated-form" novalidate>
    <div class="col-8 offset-2 col-lg-5 offset-lg-4">
<h1 class="text-success text-center">LOGIN FORM</h1>
    <div class="mb-3">
    <div class="form-label" for="username">Username</div>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    >
    <div class="invalid-feedback">
      Please provide a valid Username
    </div>
  </div>

  <div class="mb-3">
    <div class="form-label" for="password">Password</div>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="invalid-feedback">Password cannot be Empty</div>
  </div>
  <button class="btn btn-success">Login</button>
  </div>
</form>

<%- include('../../partials/footer.ejs'); %>